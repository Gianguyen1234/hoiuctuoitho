---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Đăng ký - Hồi Ức Tuổi Thơ">
  <div class="min-h-screen flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-md w-full space-y-8 bg-[#111111] p-8 rounded-xl shadow-2xl border border-gray-800">
      <div>
        <h2 class="mt-6 text-center text-3xl font-bold text-white">
          Đăng ký tài khoản
        </h2>
        <p class="mt-2 text-center text-sm text-gray-400">
          Hoặc{' '}
          <a href="/login" class="font-medium text-[#00ff9d] hover:text-[#00cc7d]">
            đăng nhập nếu đã có tài khoản
          </a>
        </p>
      </div>
      <form id="registerForm" class="mt-8 space-y-6">
        <div class="rounded-md shadow-sm -space-y-px">
          <div>
            <label for="username" class="sr-only">Tên đăng nhập</label>
            <input
              id="username"
              name="username"
              type="text"
              required
              class="appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-700 bg-[#1a1a1a] text-white placeholder-gray-400 rounded-t-md focus:outline-none focus:ring-[#00ff9d] focus:border-[#00ff9d] focus:z-10 sm:text-sm"
              placeholder="Tên đăng nhập"
            />
          </div>
          <div>
            <label for="password" class="sr-only">Mật khẩu</label>
            <input
              id="password"
              name="password"
              type="password"
              required
              class="appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-700 bg-[#1a1a1a] text-white placeholder-gray-400 rounded-b-md focus:outline-none focus:ring-[#00ff9d] focus:border-[#00ff9d] focus:z-10 sm:text-sm"
              placeholder="Mật khẩu"
            />
          </div>
        </div>

        <div>
          <button
            type="submit"
            class="group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-black bg-[#00ff9d] hover:bg-[#00cc7d] focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-[#00ff9d] transition-colors duration-200"
          >
            Đăng ký
          </button>
        </div>
      </form>
    </div>
  </div>
</Layout>

<script>
  const form = document.getElementById('registerForm');
  form?.addEventListener('submit', async (e) => {
    e.preventDefault();
    const formData = new FormData(e.target as HTMLFormElement);
    const data = {
      name: formData.get('username'),
      password: formData.get('password')
    };

    try {
      const response = await fetch('https://6852d2450594059b23cf3bfc.mockapi.io/api/register', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json'
        },
        body: JSON.stringify(data)
      });

      if (response.ok) {
        window.location.href = '/login?success=registered';
      }
    } catch (error) {
      console.error('Error:', error);
    }
  });
</script> 