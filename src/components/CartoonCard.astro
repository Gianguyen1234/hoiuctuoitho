---
interface Props {
  title: string;
  image: string;
  rating: string;
  shortDescription: string;
  id: string;
}

const { title, image, rating, shortDescription, id } = Astro.props;
---

<a href={`${import.meta.env.BASE_URL}cartoon/${id}`} class="block h-[400px]">
  <div class="bg-[#141414] rounded-lg overflow-hidden shadow-xl h-full flex flex-col">
    <div class="relative h-[280px]">
      <img
        src={`${import.meta.env.BASE_URL}${image}`}
        alt={title}
        class="w-full h-full object-cover"
      />
      <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-black/20 to-transparent"></div>
      <div class="absolute top-3 right-3 bg-[#00ff9d] text-black px-3 py-1 rounded-full text-sm font-bold shadow-lg">
        {rating}
      </div>
    </div>
    <div class="p-4 flex-1 flex flex-col">
      <h2 class="text-xl font-bold text-white mb-2 line-clamp-1">{title}</h2>
      <p class="text-gray-400 text-sm line-clamp-2">{shortDescription}</p>
    </div>
  </div>
</a> 